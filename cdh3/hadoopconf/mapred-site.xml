<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

    <property>
        <name>hadoop.job.history.location</name>
        <value>hadoop.job.history.location</value>
    </property>

    <property>
        <name>hadoop.job.history.user.location</name>
        <value>hadoop.job.history.user.location</value>
    </property>

	<property>
        <name>mapreduce.jobtracker.staging.root.dir</name>
        <value>/user</value>
    </property>
	
    <property>
        <name>mapred.job.tracker</name>
        <value>mapred.job.tracker</value>
    </property>

    <property>
        <name>mapred.map.tasks</name>
        <value>mapred.map.tasks</value>
    </property>

    <property>
        <name>mapred.reduce.tasks</name>
        <value>mapred.reduce.tasks</value>
    </property>

    <property>
        <name>mapred.tasktracker.map.tasks.maximum</name>
        <value>mapred.tasktracker.map.tasks.maximum</value>
    </property>

    <property>
        <name>mapred.tasktracker.reduce.tasks.maximum</name>
        <value>mapred.tasktracker.reduce.tasks.maximum</value>
    </property>

    <property>
        <name>mapred.job.tracker.http.address</name>
        <value>mapred.job.tracker.http.address</value>
        <final>true</final>
    </property>

    <property>
        <name>mapred.task.tracker.http.address</name> 
        <value>mapred.task.tracker.http.address</value> 
    </property>

	<property>
        <name>mapred.compress.map.output</name> 
        <value>true</value>
    </property>
    
	<property>
		<name>mapred.output.compression.type</name>
		<value>BLOCK</value>
	</property>
	
	<property>
        <name>mapred.child.java.opts</name>
        <value><![CDATA[-Xmx400m -XX:+UseConcMarkSweepGC]]></value>
    </property>

	<property>
        <name>mapred.job.reduce.total.mem.bytes</name>
        <value>0</value>
        <final>true</final>
    </property>
	
    <property>
        <name>jobtracker.thrift.address</name>
        <value>jobtracker.thrift.address</value>
    </property>

    <property>
        <name>mapred.jobtracker.plugins</name>
        <value>org.apache.hadoop.thriftfs.ThriftJobTrackerPlugin</value>
    </property>

    <property>
        <name>jobtracker.thrift.address</name>
        <value>jobtracker.thrift.address</value>
    </property>

    <property>
        <name>mapred.jobtracker.plugins</name>
        <value>org.apache.hadoop.thriftfs.ThriftJobTrackerPlugin</value>
    </property>

	<property>
        <name>io.sort.factor</name>
        <value>20</value>
    </property>

    <property>
        <name>io.sort.mb</name>
        <value>200</value>
    </property>

    <property>
        <name>io.sort.spill.percent</name>
        <value>0.7</value>
    </property>

    <property>
        <name>mapred.reduce.slowstart.completed.maps</name>
        <value>0.75</value>
    </property>
    
    <property>
        <name>mapred.reduce.parallel.copies</name>
        <value>10</value>
    </property>
    
    <property>
        <name>mapred.job.shuffle.input.buffer.percent</name>
        <value>0.7</value>
    </property>
	
	<property>
        <name>mapred.job.shuffle.merge.percent</name>
        <value>0.8</value>
    </property>

    <property>
        <name>mapred.job.reuse.jvm.num.tasks</name>
        <value>20</value>
    </property>
	
	<property>
        <name>mapred.submit.replication</name>
        <value>5</value>
    </property>
	
	<property>
        <name>mapred.userlog.limit.kb</name>
        <value>102400</value>
    </property>

    <property>
        <name>mapred.userlog.retain.hours</name>
        <value>60</value>
    </property>
		
</configuration>
